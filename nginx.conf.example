# HTTP to HTTPS redirect
server {
    if ($host = parentportal.wellspring.edu.vn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name parentportal.wellspring.edu.vn;
    return 404; # managed by Certbot
} 